@model User

<form action="/Register" method="post">
    <label class="display-4 text-left">Register!</label>
<br>
<br>
    <div class="row mb-4">
        <div class="col-4">
            <div class="form-outline">
                <input  class="form-control" asp-for="Name" />
                <label class="form-label" asp-for="Name" ></label>
                <span asp-validation-for="Name"></span>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-4">
            <div class="form-outline">
                <input  class="form-control" asp-for="Alias" />
                <label class="form-label" asp-for="Alias" ></label>
                <span asp-validation-for="Alias"></span>
            </div>
        </div>
    </div>
     <div class="row mb-4">
        <div class="col-4">
            <div class="form-outline">
                <input  class="form-control" asp-for="Email" />
                <label class="form-label" asp-for="Email" ></label>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-4">
            <div class="form-outline">
                <input  class="form-control" asp-for="Password" />
                <label class="form-label" asp-for="Password" ></label>
                <span asp-validation-for="Password"></span>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-4">
            <div class="form-outline">
                <input  class="form-control" asp-for="Confirm" />
                <label class="form-label" asp-for="Confirm" >Confirm Password</label>
                <span asp-validation-for="Confirm"></span>

            </div>
        </div>
    </div>




    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Sign Up Now</button>

    
</form>