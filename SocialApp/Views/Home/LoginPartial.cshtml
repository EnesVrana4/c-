@model LoginUser

<form action="/Login" method="post">
    <label class="display-4 text-left">Login!</label>
<br>
<br>
    <div class="row mb-4">
        <div class="col-4">
            <div class="form-outline">
                <input  class="form-control" asp-for="Email" placeholder="Write your Email"/>
                <label class="form-label"  asp-for="Email" >Email: </label>
                <span asp-validation-for="Email"></span>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-4">
            <div class="form-outline">
                <input  class="form-control" asp-for="Password" placeholder="Write your Password" />
                <label class="form-label" asp-for="Password">Password: </label>
                <span asp-validation-for="Password" ></span>
            </div>
        </div>
    </div>
 
    


    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Login</button>

    
</form>
